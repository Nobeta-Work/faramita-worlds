{
  "name": "faramita-worlds",
  "version": "0.1.0",
  "type": "module",
  "description": "An Electron-based TRPG sandbox system powered by AI.",
  "main": "out/main/index.js",
  "author": "Nobeta",
  "license": "MIT",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "vue-tsc --noEmit && electron-vite build",
    "preview": "electron-vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "npm run build && electron-builder --win"
  },
  "build": {
    "appId": "com.faramita.worlds",
    "productName": "Faramita Worlds",
    "directories": {
      "output": "dist"
    },
    "files": [
      "out/**/*",
      "package.json"
    ],
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Faramita Worlds"
    }
  },
  "dependencies": {
    "@vueuse/core": "^11.0.0",
    "axios": "^1.7.2",
    "cannon-es": "^0.20.0",
    "dexie": "^4.0.8",
    "lucide-vue-next": "^0.563.0",
    "markdown-it": "^14.1.0",
    "pinia": "^2.1.7",
    "three": "^0.166.1",
    "vue": "^3.4.31"
  },
  "devDependencies": {
    "@electron-toolkit/preload": "^3.0.1",
    "@electron-toolkit/utils": "^3.0.0",
    "@types/markdown-it": "^14.1.1",
    "@types/node": "^20.14.9",
    "@types/three": "^0.166.0",
    "@vitejs/plugin-vue": "^6.0.3",
    "electron": "^31.1.0",
    "electron-builder": "^24.13.3",
    "electron-vite": "^2.3.0",
    "typescript": "^5.5.2",
    "vite": "^5.3.2",
    "vue-tsc": "^2.0.22"
  }
}
